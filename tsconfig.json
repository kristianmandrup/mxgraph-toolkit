{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "module":"es2015",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "baseUrl": "src",
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "typeRoots": [
      "node_modules/@types",
      "ts-mxgraph"
    ],
    "paths": {
      "@toolkit/*": ["mxgraph-toolkit/*"],
      "@style/*": ["mxgraph-toolkit/style/*"],
      "@shapes/*": ["mxgraph-toolkit/shapes/*"],
      "@toolbar/*": ["mxgraph-toolkit/toolbar/*"],
      "@graph/*": ["mxgraph-toolkit/graph/*"],
      "@group/*": ["mxgraph-toolkit/group/*"],
      "@hover/*": ["mxgraph-toolkit/hover/*"],
      "@menu/*": ["mxgraph-toolkit/menu/*"]
    }
  },   
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.ts"
  ],   
  "include": [
    "src/**/*"
  ],
  "compileOnSave": true
}
